# OMNISCRIPT Documentation Module - Environment Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ============================================================================
# GitLab Authentication
# ============================================================================

# SSH Key Setup (for all git clone/push operations)
# Setup commands:
#   ssh-keygen -t ed25519 -C "your.email@company.com" -f ~/.ssh/gitlab_ed25519
#   eval "$(ssh-agent -s)"
#   ssh-add ~/.ssh/gitlab_ed25519
#   cat ~/.ssh/gitlab_ed25519.pub | pbcopy
# Add public key to GitLab → Preferences → SSH Keys
# Test: ssh -T git@gitlab.com

# Personal Access Token for GitLab API operations (merge request creation only)
# Create at: https://gitlab.com/-/profile/personal_access_tokens
# Required scopes: api, read_repository, write_repository
GITLAB_DOCS_TOKEN=glpat-yyyyyyyyyyyyy

# ============================================================================
# Documentation Repository Configuration (FIXED URL)
# ============================================================================

# The GitLab repository where all documentation is published
# This URL stays the same for all documentation requests
DOCS_REPOSITORY_URL=https://gitlab.com/your-org/omniscript-docs.git

# Default branch in documentation repository
DOCS_TARGET_BRANCH=main

# ============================================================================
# Git Configuration
# ============================================================================

# Git user for commits to documentation repository
GIT_USER_NAME="OmniScript Documentation Bot"
GIT_USER_EMAIL="omniscript-docs@company.com"

# ============================================================================
# Merge Request Configuration
# ============================================================================

# GitLab project ID for documentation repository (for API calls)
# Find this in your GitLab project settings
DOCS_PROJECT_ID=12345

# Default reviewers (GitLab usernames, comma-separated)
DEFAULT_REVIEWERS=""

# Labels to apply to merge requests (comma-separated)
MR_LABELS="documentation,omniscript,automated"

# Auto-merge merge requests (true/false)
# Recommended: false (requires expert review)
MR_AUTO_MERGE=false

# ============================================================================
# Optional: Source Repository Defaults
# ============================================================================

# Default branch to checkout from source repositories (if not specified)
SOURCE_DEFAULT_BRANCH=main

# ============================================================================
# Working Directory Configuration
# ============================================================================

# Base directory for temporary repository clones
WORK_DIR=/tmp

# Cleanup temporary directories after completion (true/false)
AUTO_CLEANUP=true

# ============================================================================
# Documentation Output Configuration
# ============================================================================

# Directory where documentation is generated
# For local mode: relative to workspace root (e.g., omniscript-documentation)
# For GitLab mode: relative path within the cloned docs repository
OMNISCRIPT_DOCS_OUTPUT_DIR=omniscript-documentation
